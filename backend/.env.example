# Application Configuration
APP_NAME=ShipmentApp
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.shipmentapp.com
APP_TIMEZONE=UTC
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=shipmentapp
DB_USERNAME=shipmentapp
DB_PASSWORD=

# Database SSL Configuration (for production)
DB_SSLMODE=prefer
DB_SSLCERT=
DB_SSLKEY=
DB_SSLROOTCERT=

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.shipmentapp.com

# Cache Configuration
CACHE_DRIVER=redis
CACHE_PREFIX=shipmentapp_cache

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_RETRY_AFTER=90

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@shipmentapp.com
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun Configuration (Alternative)
MAILGUN_DOMAIN=
MAILGUN_SECRET=
MAILGUN_ENDPOINT=api.mailgun.net

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Sanctum Authentication Configuration
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,shipmentapp.com,www.shipmentapp.com,api.shipmentapp.com
SANCTUM_EXPIRATION=1440

# JWT Configuration (if using JWT instead of Sanctum)
JWT_SECRET=
JWT_TTL=1440
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# Rate Limiting
AUTH_RATE_LIMIT=60
API_RATE_LIMIT=1000

# Security Configuration
BCRYPT_ROUNDS=12
ARGON_MEMORY=1024
ARGON_THREADS=2
ARGON_TIME=2

# Logging Configuration
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_DEPRECATIONS_CHANNEL=null
LOG_SLACK_WEBHOOK_URL=

# Error Tracking (Sentry)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Social Authentication
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT=

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT=

# Two-Factor Authentication
TWO_FACTOR_ENABLED=true
TWO_FACTOR_ISSUER="${APP_NAME}"

# Password Security
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMERIC=true
PASSWORD_REQUIRE_SPECIAL=true

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=60
PASSWORD_HISTORY=3
PASSWORD_EXPIRY_DAYS=90

# API Configuration
API_PREFIX=api
API_VERSION=v1
API_DEBUG=false

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://shipmentapp.com,https://www.shipmentapp.com
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-CSRF-Token
CORS_EXPOSED_HEADERS=
CORS_MAX_AGE=0
CORS_SUPPORTS_CREDENTIALS=true

# File Upload Configuration
FILESYSTEM_DISK=local
MAX_FILE_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx
UPLOAD_PATH=uploads

# Image Processing
IMAGE_DRIVER=gd
IMAGE_QUALITY=90
IMAGE_MAX_WIDTH=2048
IMAGE_MAX_HEIGHT=2048

# Queue Workers
QUEUE_WORKERS=4
QUEUE_TIMEOUT=90
QUEUE_MEMORY=512
QUEUE_SLEEP=3
QUEUE_TRIES=3

# Broadcasting
BROADCAST_DRIVER=redis
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vapor Configuration (if using Laravel Vapor)
VAPOR_ARTIFACT_NAME=
VAPOR_ARTIFACT_PATH=

# Scout Configuration (if using full-text search)
SCOUT_DRIVER=algolia
SCOUT_PREFIX=shipmentapp_
SCOUT_QUEUE=true

# Algolia Search
ALGOLIA_APP_ID=
ALGOLIA_SECRET=

# Elasticsearch
ELASTIC_HOST=localhost:9200
ELASTIC_USER=
ELASTIC_PASS=

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_SECRET=

# Feature Flags
FEATURE_REGISTRATION=true
FEATURE_PASSWORD_RESET=true
FEATURE_EMAIL_VERIFICATION=true
FEATURE_TWO_FACTOR=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_API_RATE_LIMITING=true

# Performance Settings
CACHE_PREFIX=shipmentapp
CACHE_TAGS=true
QUERY_CACHE=true
VIEW_CACHE=true
CONFIG_CACHE=true
ROUTE_CACHE=true
EVENT_CACHE=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_REFRESH_INTERVAL=60

# SSL/TLS Configuration
FORCE_HTTPS=true
SSL_VERIFY_PEER=true
SSL_VERIFY_HOST=true
SSL_CAFILE=
SSL_CAPATH=

# Timezone and Localization
TIMEZONE=UTC
LOCALE=en
FALLBACK_LOCALE=en
CURRENCY=USD
DATE_FORMAT=Y-m-d
TIME_FORMAT=H:i:s

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DISK=s3
BACKUP_PATH=backups
BACKUP_RETENTION_DAYS=30
BACKUP_NOTIFICATION_EMAIL=

# Monitoring
MONITORING_ENABLED=true
MONITORING_ENDPOINT=/metrics
MONITORING_USERNAME=
MONITORING_PASSWORD=

# Development Settings (only for local development)
DEBUGBAR_ENABLED=false
TELESCOPE_ENABLED=false
HORIZON_ENABLED=false
SANCTUM_LOG_QUERIES=false

# Testing Configuration
TESTING_DB_CONNECTION=sqlite
TESTING_DB_DATABASE=:memory:

